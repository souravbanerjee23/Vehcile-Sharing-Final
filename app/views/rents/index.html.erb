<h1>Rents</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Start location</th>
      <th>Destination</th>
      <th>Seats</th>
      <th>Ride</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rents.each do |rent| %>
      <tr>
        <td><%= rent.start_location %></td>
        <td><%= rent.destination %></td>
        <td><%= rent.seats %></td>
        <td><%= rent.ride_id %></td>
        <td><%= link_to 'Show', rent %></td>
        <td><%= link_to 'Edit', edit_rent_path(rent) %></td>
        <td><%= link_to 'Destroy', rent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Bargain', edit_rent_path(rent) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

